<div class="row">
  <div class="col-md-4">
    <%= form_for(poll) do |f| %>
      <% if poll.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(poll.errors.count, "error") %> prohibited this poll from being saved:</h2>

          <ul>
          <% poll.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :published %>
          <%= f.check_box :published, class: "form-control"  %>
        </div>
        <div class="form-group">
          <%= f.fields_for :options do |ff| %>
            <%= ff.text_field :text, class: "form-control" %>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.submit "Create poll", class: "form-control" %>
        </div>
    <% end %>
  </div>
</div>
