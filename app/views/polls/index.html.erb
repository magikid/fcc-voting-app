<div class="row">
  <div class="col-md-12">
    <p id="notice"><%= notice %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <h1>Polls</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'Create New Poll', new_poll_path %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Published</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @polls.each do |poll| %>
          <tr>
            <td><%= poll.title %></td>
            <td><%= poll.published %></td>
            <td><%= link_to 'Show', poll %></td>
            <td><%= link_to 'Edit', edit_poll_path(poll) %></td>
            <td><%= link_to 'Destroy', poll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
